#Seat booking based on token number
print("Seat booking based on token number")
print("\n")


name=input("Enter your name ")
token_number=int(input("Enter your token number: "))

if token_number%2!=0:
    print(f"{name}:your seat is confirmed.")
elif token_number%2==0 and token_number!=0:
    print(f"{name}:you are in waiting list.")
elif token_number==0:
    print(f"Sorry! {name}: No seat available for you.")

print("\n")
